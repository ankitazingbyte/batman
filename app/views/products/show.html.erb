<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <strong>Name:</strong></br>
      <h4><%= @product.name %></small></h4>
        <strong>Discription:</strong></br>
      <h4><%= @product.discription %></h4>
        <strong>Price:</strong></br>
      <h4><%= number_to_currency @product.price %></h4>
    </div>
    <div class="col-xs-4">
      <p><%= image_tag @product.image.url %></p>
      <%= form_for @order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price:<span style="color: green"><%= number_to_currency @product.price %></span></h4>
          <div class="input-group">
            <%= f.number_field :quantity, value: 0, class: "form-control", min: 0 %>
            <div class="input-group-btn">
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            </div>
            <div class="input-group-btn">
              <%= link_to "Buy Now", orders_path, class: "btn btn-link", class: "btn btn-danger"%>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>